#This only returns the answer to part 2

f = open("20211.txt").read().splitlines()

counter = 0
l = []


for i in range (len(f)-2):
    n = int(f[i]) + int(f[i+1]) + int(f[i+2]) 
    l.append(n)

n = l[0]

for i in range (1,len(l)):
    num = l[i]
    if num > n:
        counter += 1
    n = num

print (counter)
        
    
